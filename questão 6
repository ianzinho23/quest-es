programa {
  funcao inicio() {
    //Definindo Variáveis
    inteiro mediaA 
    real media1, media2
    //Solicitando as notas do Aluno
    escreva("\nEscreva a sua primeira nota: ")
    leia(media1)
    escreva("\nEscreva a sua segunda nota: ")
    leia(media2)
    //Media Aritimetica
    mediaA=media1+media2 / 2
    //SE
      se(mediaA>6)
        escreva ("Aprovado Parábens!!!")

        senao
          escreva ("Reprovado :(")


    
  }
}
